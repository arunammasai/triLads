			$pdf->SetFont('Times','',12);
			$charge = $invoiceSubMeter[$MeterId]['Charge'];;
			 $tax = $invoiceSubMeter[$MeterId]['Tax'];;
			 $total = $charge + $tax;
			 /**$chargespace = 12 - strlen($charge) + 67;
