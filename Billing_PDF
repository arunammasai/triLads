					if ($BreakFlag == 1) 
					{
						break;
					}
				}
				$charge = round($charge, $RoundTo);
				//echo "Charge:B4:". $charge."<br>";

				//echo "Charge::". $charge."<br>";				
				$tax = $charge * (1/10);
				$total = $charge + round($tax, $RoundTo) ;
				
