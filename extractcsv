$file = fopen("csv/".$name,"r");
$i = 1;
	while(! feof($file))
	{
		$row	=	fgetcsv($file);
		if($i == 2)
		{
			echo "<tr style='font-weight : bold;'>
			<td>".$row[0]."</td>
			<td>".$row[1]."</td>
			<td>".$row[2]."</td>
			<td>".$row[3]."</td>
			<td>".$row[4]."</td>
			<td>".$row[5]."</td>
			<td>".$row[6]."</td>
			<td>".$row[7]."</td>
			<td>".$row[8]."</td>
			<td>".$row[9]."</td>
			<td>".$row[10]."</td>
			</tr>";
		}
		else
		{
			echo "<tr>
			<td>".$row[0]."</td>
			<td>".$row[1]."</td>
			<td>".$row[2]."</td>
			<td>".$row[3]."</td>
			<td>".$row[4]."</td>
			<td>".$row[5]."</td>
			<td>".$row[6]."</td>
			<td>".$row[7]."</td>
			<td>".$row[8]."</td>
			<td>".$row[9]."</td>
			<td>".$row[10]."</td>
			</tr>";
		}
		
		$i++;
	}
	
	fclose($file);
}
?>
</table>

